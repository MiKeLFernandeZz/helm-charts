apiVersion: batch/v1
kind: Job
metadata:
  name: wait-for-airflow
  namespace: {{ .Release.Namespace }}
  annotations:
    "helm.sh/hook": post-install
    "helm.sh/hook-delete-policy": before-hook-creation,hook-succeeded
spec:
  template:
    spec:
      restartPolicy: Never
      containers:
        - name: wait-for-airflow
          image: alpine:3.19
          command:
            - sh
            - -c
            - |
              echo "Waiting for Airflow to be ready..."
              until nc -z {{ printf "%s-webserver" (include "airflow.fullname" .) }} {{ (index .Values.airflow.webserver.service.ports 0).port }}; do
                echo "Not ready..."
                sleep 5
              done
              echo "âœ… Airflow is available"
